double findMedianSortedArrays(int * nums1 , int nums1Size, int* nums2, int nums2Size)
{
    int len = nums1Size + nums2Size;
    int mid = len / 2 + 1;
    int arr[mid];
    for(int i = 0; i < mid ; i++)
    {
        if(*nums1 <= *nums2)
        {
            arr[i] = *nums1;
            nums1++;
        }
        else
        {
            arr[i] = *nums2;
            nums2++;
        }
    }
    if(len % 2)
        return arr[mid-1];
    else
        return (arr[mid-1] + arr[mid-2]) / 2;
}
